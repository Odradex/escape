%h2 Resend confirmation
= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: "edit-user"}) do |f|
  = render "devise/shared/error_messages", resource: resource
  .form-field
    = f.label :email
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"
  .actions
    = f.submit "Resend confirmation instructions", class: "btn btn-primary mt-3 mb-3"
= render "devise/shared/links"
